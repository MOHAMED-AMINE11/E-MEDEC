<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#C71A55"> <!-- Fond coloré pour un effet de contraste -->

    <!-- Conteneur pour l'image et les informations utilisateur -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="15dp">

        <!-- Image circulaire de l'utilisateur -->
        <ImageView
            android:id="@+id/user_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/elmaskyne"
            android:scaleType="centerCrop"
            android:background="@drawable/circular_image"
            android:layout_gravity="start"
            android:layout_marginEnd="16dp"
            android:contentDescription="Photo de profil de l'utilisateur" />

        <!-- Informations sur l'utilisateur -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mohamed Amine El Maskyne"
                android:textSize="18sp"
                android:textColor="@android:color/white"
                android:fontFamily="sans-serif-medium" />

            <TextView
                android:id="@+id/user_age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Âge : 25 ans"
                android:textSize="14sp"
                android:textColor="#DDDDDD"
                android:layout_marginTop="4dp"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Ligne séparante -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/white"
        android:alpha="0.5"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="4dp"/>
</LinearLayout>
