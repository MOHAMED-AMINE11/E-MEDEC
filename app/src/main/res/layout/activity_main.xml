<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Barre d'outils -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#C71A55"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />

        <!-- Message de bienvenue -->
        <TextView
            android:id="@+id/welcome_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:text="Bienvenue ! Chargement des rappels..."
            android:textSize="18sp"
            android:visibility="visible" />

        <!-- Barre de recherche -->
        <androidx.appcompat.widget.SearchView
            android:id="@+id/search_view"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="140dp"
            android:layout_marginTop="10dp"
            android:queryHint="Rechercher par médicament, titre ou date"
            app:iconifiedByDefault="true"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:visibility="gone" /> <!-- Masqué par défaut -->

        <!-- RecyclerView pour les rappels -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rappel_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="80dp"
            android:visibility="gone"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"/>

        <!-- Floating Action Button pour ajouter un rappel -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_add_rappel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_margin="16dp"
            android:src="@drawable/ic_add"
            android:contentDescription="Ajouter un rappel"
            app:backgroundTint="#C71A55" />
    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/drawer_menu" />
</androidx.drawerlayout.widget.DrawerLayout>
